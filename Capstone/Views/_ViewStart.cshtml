@*@{
        Layout = "_Layout";
    }*@

@{
    if (this.User.IsInRole("Manager"))
    {
        Layout = "~/Views/Shared/_LayoutManager.cshtml";
    }
    else if (this.User.IsInRole("Employee"))
    {
        Layout = "~/Views/Shared/_LayoutEmployee.cshtml";
    }
    else
    {
        Layout = "~/Views/Shared/_Layout.cshtml";
    }
}